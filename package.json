{
  "name": "booth.js",
  "version": "0.0.1-rc8",
  "license": "MIT",
  "packageManager": "yarn@3.2.3",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "repository": "https://github.com/Nickersoft/booth.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "yarn clean && yarn build",
    "build": "concurrently \"yarn:build:cjs\" \"yarn:build:esm\" \"yarn:build:bundle\" \"tsc --emitDeclarationOnly\"",
    "build:cjs": "swc -s -C module.type=commonjs src -d dist/cjs",
    "build:esm": "swc -s -C module.type=es6 src -d dist/esm",
    "build:bundle": "node scripts/bundle.cjs",
    "clean": "shx rm -rf dist",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "xo --ignore types --ignore jest.config.ts",
    "check": "tsc",
    "test": "jest"
  },
  "xo": {
    "prettier": true
  },
  "devDependencies": {
    "@jest/globals": "^29.0.3",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.2",
    "@swc/jest": "^0.2.22",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/eslint": "^8",
    "@types/glob": "^8",
    "@types/jsdom": "^20",
    "@types/shelljs": "^0",
    "@types/xo": "^0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "commitizen": "^4.2.5",
    "concurrently": "^7.4.0",
    "cz-emoji": "1.3.2-canary.2",
    "esbuild": "^0.15.8",
    "glob": "^8.0.3",
    "husky": "^8.0.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "typescript": "*",
    "xo": "^0.52.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  }
}
