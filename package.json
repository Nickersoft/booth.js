{
	"name": "booth.js",
	"version": "0.0.1-rc8",
	"license": "MIT",
	"type": "module",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": "https://github.com/Nickersoft/booth.js",
	"files": [
		"dist"
	],
	"scripts": {
		"prepublishOnly": "pnpm clean && pnpm build",
		"clean": "shx rm -rf dist",
		"prepare": "husky",
		"build": "bun build src/index.ts --outdir dist --target browser --format esm && bun build src/worklets/volume-meter.ts --outdir dist/worklets --target browser --format esm && tsc"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@playwright/test": "next",
		"@types/bun": "^1.2.23",
		"@typescript/native-preview": "^7.0.0-dev.20251004.1",
		"commitizen": "4.3.1",
		"cz-emoji": "1.3.2-canary.2",
		"husky": "9.1.7",
		"lint-staged": "16.2.3",
		"playwright": "^1.55.1",
		"typescript": "5.9.3"
	},
	"lint-staged": {
		"*.{ts,js}": [
			"biome format",
			"biome lint --fix"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-emoji"
		}
	}
}
